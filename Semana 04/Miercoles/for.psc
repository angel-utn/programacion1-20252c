Algoritmo sin_titulo
	Para VC<-1 Hasta 3 Con Paso 1 Hacer
		Escribir 'Dia #',VC
	FinPara
	Escribir '---------'
	Para VC<-0 Hasta 2 Con Paso 1 Hacer
		Escribir 'Dia #',VC
	FinPara
	Escribir '---------'
	Para VC<-2 Hasta 7 Con Paso 2 Hacer
		Escribir 'Dia #',VC
	FinPara
	Escribir '---------'
	Para VC<-7 Hasta 2 Con Paso -2 Hacer
		Escribir 'Dia #',VC
	FinPara
FinAlgoritmo
